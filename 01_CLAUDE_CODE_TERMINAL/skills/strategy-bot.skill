  class MotionStrategy:
      def __init__(self, motion_type, facts, law):
          self.motion_type = motion_type
          self.facts = facts
          self.law = law

      def assess_success_probability(self):
          """Calculate likelihood of motion success"""
          factors = {
              'legal_merit': self.evaluate_legal_strength(),
              'factual_support': self.evaluate_evidence(),
              'procedural_posture': self.evaluate_timing(),
              'judicial_temperament': self.evaluate_judge(),
              'opposing_response_quality': self.anticipate_opposition()
          }

          weights = {
              'legal_merit': 0.35,
              'factual_support': 0.30,
              'procedural_posture': 0.15,
              'judicial_temperament': 0.10,
              'opposing_response_quality': 0.10
          }

          weighted_score = sum(
              factors[k] * weights[k]
              for k in factors
          )

          return weighted_score

      def recommend_filing_decision(self):
          probability = self.assess_success_probability()

          if probability > 0.70:
              return "STRONG RECOMMEND - High likelihood of success"
          elif probability > 0.50:
              return "RECOMMEND - More likely than not to succeed"
          elif probability > 0.30:
              return "CAUTIOUS - Success possible but uncertain"
          else:
              return "NOT RECOMMENDED - Low likelihood of success"
  ```

