# Legal Strategy Bot Configuration Template
# Copy this file to .env and fill in your API keys

# Westlaw Edge API Configuration
WESTLAW_API_KEY=your_westlaw_api_key_here
WESTLAW_API_URL=https://api.westlaw.com/v2

# LexisNexis API Configuration
LEXISNEXIS_API_KEY=your_lexisnexis_api_key_here
LEXISNEXIS_API_URL=https://api.lexisnexis.com/v1

# Application Settings
LOG_LEVEL=INFO
OUTPUT_DIRECTORY=./output
MAX_SEARCH_RESULTS=50
DEFAULT_JURISDICTION=federal

# Feature Flags
ENABLE_CITATION_VALIDATION=true
ENABLE_SETTLEMENT_ANALYSIS=true
ENABLE_MOTION_DRAFTING=true
USE_MOCK_DATA_IF_NO_API=true

# Research Settings
RESEARCH_DATE_RANGE_START=1990-01-01
RESEARCH_DATE_RANGE_END=2025-12-31
PRIORITIZE_RECENT_CASES=true
MINIMUM_SIMILARITY_SCORE=0.4

# Confidence Score Weights (must sum to 1.0)
WEIGHT_AUTHORITY_TYPE=0.20
WEIGHT_NUMBER_OF_CASES=0.15
WEIGHT_STATUTORY_SUPPORT=0.10
WEIGHT_STRENGTH_RATIO=0.15
WEIGHT_RECENCY=0.10
WEIGHT_SIMILARITY=0.20
WEIGHT_DISTINCTIONS=0.10

# Output Settings
GENERATE_JSON=true
GENERATE_MEMO=true
GENERATE_VALIDATION_REPORT=true
SAVE_INTERMEDIATE_RESULTS=false

# Performance Settings
API_TIMEOUT=30
MAX_RETRIES=3
CACHE_RESULTS=true
CACHE_EXPIRY_HOURS=24

# Security Settings
VALIDATE_ALL_CITATIONS=true
REQUIRE_ATTORNEY_REVIEW=true
INCLUDE_DISCLAIMERS=true
