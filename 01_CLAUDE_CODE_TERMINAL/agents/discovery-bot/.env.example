# Discovery Bot Configuration

# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_api_key_here

# Model Configuration
MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS=4096
TEMPERATURE=0.0

# Processing Configuration
BATCH_SIZE=100
PARALLEL_WORKERS=10
CACHE_RESULTS=true
ENABLE_VALIDATION=true
SAVE_INTERMEDIATE=true

# Directory Configuration
CACHE_DIR=./cache
OUTPUT_DIR=./output
LOG_DIR=./logs

# Quality Thresholds
MIN_CONFIDENCE=0.85
MIN_ENTITIES_FOR_VALIDATION=1

# Rate Limiting
RATE_LIMIT_DELAY=0.0  # Seconds between requests (0 for no delay)

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0  # Base delay for exponential backoff

# Cost Management
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100.00  # Alert if batch exceeds this cost in USD

# Privilege Detection
PRIVILEGE_HEURISTIC_THRESHOLD=0.95  # Skip API call if heuristic is very confident

# Embedding Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=discovery_bot.log
