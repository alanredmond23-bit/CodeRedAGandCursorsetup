# Antigravity Cloud Orchestration - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Google Cloud Platform (GCP) Configuration
# ==============================================================================

# GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Path to service account credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# Google Cloud Storage bucket for file storage
GCS_BUCKET_NAME=your-legal-docs-bucket

# Google Search API (for research agent)
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_CX=your-custom-search-engine-id

# Google Calendar Integration
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# ==============================================================================
# Claude Code Terminal / CrewAI Configuration
# ==============================================================================

# Claude API Configuration
CLAUDE_API_URL=https://api.anthropic.com/v1
CLAUDE_API_KEY=your-claude-api-key

# ==============================================================================
# CodeRed Database Configuration
# ==============================================================================

# PostgreSQL Connection String
# Format: postgresql://user:password@host:port/database
CODERED_CONNECTION_STRING=postgresql://codered_user:your_password@localhost:5432/legal_cases

# ==============================================================================
# Supabase Configuration
# ==============================================================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous/Service Key
SUPABASE_KEY=your-supabase-key

# ==============================================================================
# Redis Cache Configuration (Optional)
# ==============================================================================

# Redis Connection URL
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# Email/SMTP Configuration (for notifications)
# ==============================================================================

# SMTP Server
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Notification Email Address
NOTIFICATION_EMAIL=notifications@yourlegalfirm.com
ADMIN_EMAIL=admin@yourlegalfirm.com

# ==============================================================================
# Webhook Configuration (for alerts)
# ==============================================================================

# Webhook URL for critical alerts
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# ==============================================================================
# Security Configuration
# ==============================================================================

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==============================================================================
# Feature Flags
# ==============================================================================

# Enable/disable features
ENABLE_VECTOR_SEARCH=true
ENABLE_COST_TRACKING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_AUTO_RECOVERY=true

# ==============================================================================
# Development/Testing
# ==============================================================================

# Environment
ENVIRONMENT=production  # production, staging, development

# Debug mode
DEBUG_MODE=false

# Dry run mode (don't make actual changes)
DRY_RUN=false

# Mock external APIs for testing
MOCK_APIS=false

# ==============================================================================
# Cost and Budget Controls
# ==============================================================================

# Daily budget limit (USD)
DAILY_BUDGET_LIMIT=100.00

# Monthly budget limit (USD)
MONTHLY_BUDGET_LIMIT=2500.00

# Budget alert threshold (percentage)
BUDGET_ALERT_THRESHOLD=80

# Hard stop when budget exceeded
BUDGET_HARD_STOP=true

# ==============================================================================
# Performance Configuration
# ==============================================================================

# Sync interval (seconds)
SYNC_INTERVAL=30

# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=10

# Maximum documents per task
MAX_DOCUMENTS_PER_TASK=10000

# Request timeout (seconds)
REQUEST_TIMEOUT=120

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/antigravity.log

# Maximum log file size (bytes)
LOG_MAX_SIZE=104857600  # 100MB

# Number of backup log files to keep
LOG_BACKUP_COUNT=10

# ==============================================================================
# Compliance and Legal
# ==============================================================================

# Data retention period (days)
DATA_RETENTION_DAYS=2555  # 7 years for legal compliance

# Enable attorney-client privilege protection
ENABLE_PRIVILEGE_PROTECTION=true

# Enable audit trail
ENABLE_AUDIT_TRAIL=true

# ==============================================================================
# Notes
# ==============================================================================

# IMPORTANT SECURITY NOTES:
# 1. Never commit this file with actual credentials to version control
# 2. Use environment-specific .env files (.env.production, .env.staging)
# 3. Rotate credentials regularly
# 4. Use secrets management services in production (GCP Secret Manager, AWS Secrets Manager)
# 5. Enable encryption at rest and in transit for all sensitive data
# 6. Follow principle of least privilege for service accounts
# 7. Enable audit logging for all access to sensitive data

# COST CONTROL NOTES:
# - Monitor your GCP/Claude API usage regularly
# - Set up billing alerts in GCP Console
# - Review cost tracking data daily
# - Adjust agent parameters to optimize cost/performance
# - Use batch operations when possible
# - Cache results to reduce API calls

# COMPLIANCE NOTES:
# - Ensure all data handling complies with attorney-client privilege
# - Maintain audit trails for all system actions
# - Implement proper data retention and deletion policies
# - Regular backups of critical data
# - Document all security incidents
