# CodeRed Legal Discovery - Environment Variables
# Copy this file to .env.local and fill in your actual credentials
# NEVER commit .env.local to version control!

# Supabase Configuration
SUPABASE_URL=https://xgcqjwviirrkyhwlaeyr.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# OpenAI API (for embeddings and gpt-4o agents)
OPENAI_API_KEY=sk-proj-xxxxx

# Anthropic API (if using Claude models)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Westlaw API (optional - for legal research)
WESTLAW_API_KEY=your_westlaw_api_key_here

# LexisNexis API (optional - for legal research)
LEXISNEXIS_API_KEY=your_lexisnexis_api_key_here

# Gmail API (optional - for email discovery)
GMAIL_SERVICE_ACCOUNT=path/to/service-account.json

# GitHub Token (optional - for version control)
GITHUB_TOKEN=ghp_xxxxx

# Slack Webhook (optional - for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx

# Cost Tracking Configuration
DAILY_COST_BUDGET=200.0
WEEKLY_COST_BUDGET=1000.0
MONTHLY_COST_BUDGET=5000.0
COST_ALERT_EMAIL=attorney@lawfirm.com

# Zone Configuration
DEFAULT_ZONE=YELLOW
STRICT_ZONE_ENFORCEMENT=true

# Privilege Detection
PRIVILEGE_CONFIDENCE_THRESHOLD=0.5
AUTO_FLAG_PRIVILEGE=true

# RAG Configuration
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_CHUNK_SIZE=1800
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_CACHE_ENABLED=true
RAG_CACHE_TTL=3600

# Agent Configuration
ARCHITECT_MODEL=gpt-4o
CODE_MODEL=gpt-4o
TEST_MODEL=gpt-4o-mini
REVIEW_MODEL=gpt-4o
EVIDENCE_MODEL=gpt-4o
CYNIC_MODEL=gpt-4o

# Default Attorney ID (for testing)
DEFAULT_ATTORNEY_ID=john_doe

# Default Case ID (for testing)
DEFAULT_CASE_ID=CUSTODY-2024-001

# Logging
LOG_LEVEL=INFO
LOG_TO_SUPABASE=true
LOG_TO_FILE=false
LOG_FILE_PATH=/var/log/codered.log
