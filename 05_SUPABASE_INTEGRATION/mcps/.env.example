# MCP Integration Environment Variables
# Copy this file to .env and fill in your actual credentials

# Westlaw API Credentials
WESTLAW_API_KEY=your_westlaw_api_key_here

# LexisNexis Protégé API Credentials
LEXISNEXIS_API_KEY=your_lexisnexis_api_key_here
LEXISNEXIS_API_SECRET=your_lexisnexis_api_secret_here

# Gmail OAuth Credentials
# Download credentials.json from Google Cloud Console
GMAIL_CREDENTIALS_PATH=credentials.json

# Slack OAuth Token
# Get from https://api.slack.com/apps
SLACK_OAUTH_TOKEN=xoxb-your-slack-oauth-token-here

# Supabase Credentials
# Get from Supabase Project Settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# GitHub Personal Access Token
# Generate at https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Optional: Redis for distributed caching
REDIS_URL=redis://localhost:6379

# Optional: API Endpoints (override defaults)
# WESTLAW_BASE_URL=https://api.westlaw.com/v1
# LEXISNEXIS_BASE_URL=https://api.lexisnexis.com/protégé/v1
# SLACK_BASE_URL=https://slack.com/api
# GITHUB_BASE_URL=https://api.github.com

# Logging Configuration
LOG_LEVEL=INFO

# Cost Tracking
DAILY_BUDGET_USD=100.00
COST_ALERT_EMAIL=admin@example.com

# Security
# Set to 'true' to require encryption for sensitive data
ENCRYPT_CACHE=false
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Compliance
# Retention period for compliance logs (days)
COMPLIANCE_RETENTION_DAYS=2555  # 7 years

# Performance
# Enable Redis caching for better performance
USE_REDIS=false
# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10
